 <div class="small-2 large-4 columns">
  <h1> Create new League </h1>

<%= form_for @league do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :school %>
	<%= f.text_field :school %>
	<%= f.label :start_date %>
	<%= f.datetime_local_field :start_date %>
	<%= f.label :end_date %>
	<%= f.datetime_local_field :end_date %>

	<%= f.submit %>
<% end %>
</div>

